<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="0dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/gradient_horizontal">

        <RelativeLayout
            android:id="@+id/actionLAy"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackgroundBorderless">

            <ImageView
                android:id="@+id/sideMenu"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:padding="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:srcCompat="@drawable/ic_arrow_back_white_36dp"
                app:tint="@color/white" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/selectableItemBackground">

           <!-- <ImageView
                android:layout_width="196dp"
                android:layout_height="wrap_content"
                android:src="@drawable/tkl_logo"
                android:layout_centerVertical="true" />-->

            <TextView
                android:id="@+id/toolbarHeaderText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Header Text"
                android:textSize="@dimen/action_header"
                android:textColor="@color/light_grey_blue" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>