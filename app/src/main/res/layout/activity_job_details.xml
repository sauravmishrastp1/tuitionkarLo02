<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.ActivityJobDetails">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/action_bar"
                layout="@layout/ly_tool_bar_one"
                android:layout_width="match_parent"
                android:layout_height="56dp" />
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="100dp"
                android:id="@+id/jobLogo"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_height="100dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Job Title : "
                android:textColor="@color/black"
                android:textSize="@dimen/main_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobTitle_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="@dimen/main_header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Salary : "
                android:textColor="@color/black"
                android:textSize="@dimen/main_header"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobSalary_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="N/A"
                android:textColor="@color/black"
                android:textSize="@dimen/main_header" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Requirments: "
                android:textColor="@color/black"
                android:textSize="@dimen/main_header"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/jobExp_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="N/A"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_header" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Job Location : "
                android:textColor="@color/black"
                android:textSize="@dimen/main_header"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/jobLoc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="N/A"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_header" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:text="Job Description : "
                android:textColor="@color/black"
                android:textSize="@dimen/main_header"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/jobDesc_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginRight="16dp"
                android:text="N/A"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/main_header" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/bg_gray"
                app:cardCornerRadius="15dp"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Job Information: "
                        android:textColor="@color/black"
                        android:textSize="@dimen/main_header"
                        android:textStyle="bold" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Date Posted"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/postedDate"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginRight="16dp"
                        android:text="N/A"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_header" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Location"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_header" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Experience"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Experience"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:text="N/A"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_header" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Qualification"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/Qualification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:text="N/A"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_header" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="24dp"
                        android:text="Offered Salary"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/OfferedSalary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginRight="16dp"
                        android:text="N/A"
                        android:layout_marginBottom="10dp"
                        android:layout_marginStart="20dp"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/main_header" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="56dp"/>

        </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/applyJob_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:gravity="center"
        android:text="Apply Now"
        android:textColor="@android:color/white"
        android:textSize="@dimen/main_header"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="16dp" />

<!--    <ProgressBar-->
<!--        android:id="@+id/jobDetail_pB"-->
<!--        android:layout_width="56dp"-->
<!--        android:layout_height="56dp"-->
<!--        android:layout_centerInParent="true"-->
<!--        android:visibility="gone" />-->
</androidx.constraintlayout.widget.ConstraintLayout>